---
import Icon from '../components/Icons.astro';
---

<nav class="bg-white shadow-lg border-b border-gray-100 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
            <Icon name="logo" class="text-white w-5 h-5" />
          </div>
          <span class="text-xl font-bold text-gray-900 hidden sm:block">E-Obchod</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-gray-900 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Domů</a>
          <a href="/products" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Produkty</a>
          <a href="/categories" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Kategorie</a>
          <a href="/deals" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">Slevy</a>
          <a href="/about" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium transition-colors duration-200">O Nás</a>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="hidden lg:block flex-1 max-w-md mx-8">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <Icon name="search" class="text-gray-600 w-5 h-5" />
          </div>
          <input 
            type="search" 
            placeholder="Vyhledej produkt..." 
            class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-gray-50 placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
          >
        </div>
      </div>

      <!-- Right Side Icons -->
      <div class="flex items-center space-x-4">
        
        <!-- Search Icon (Mobile) -->
        <button class="lg:hidden text-gray-600 hover:text-blue-600 p-2 transition-colors duration-200">
          <Icon name="search" class="text-gray-600 w-5 h-5" />
        </button>

        <!-- Wishlist -->
        <button class="text-gray-600 hover:text-red-500 p-2 relative transition-colors duration-200">
          <Icon name="hearth" class="w-5 h-5" />
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">3</span>
        </button>

        <!-- Cart -->
        <button class="text-gray-600 hover:text-blue-600 p-2 relative transition-colors duration-200">
          <Icon name="cart" class="w-5 h-5" />
          <span class="absolute -top-1 -right-1 bg-blue-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">2</span>
        </button>

        <!-- User Account -->
        <button class="text-gray-600 hover:text-blue-600 p-2 transition-colors duration-200">
          <Icon name="user" class="w-5 h-5" />
        </button>

        <!-- Mobile Menu Button -->
        <button class="md:hidden text-gray-600 hover:text-blue-600 p-2 transition-colors duration-200" id="menu-button">
          <div id="menu-open"><Icon name="menuOpen" class="w-5 h-5" /></div>
          <div class="hidden" id="menu-close"><Icon name="menuClose" class="w-5 h-5" /></div>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="md:hidden border-t border-gray-200 bg-white" id="mobile-menu" style="display: none;">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <!-- Mobile Search -->
        <div class="px-3 py-2">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <Icon name="search" class="text-gray-600 w-5 h-5" />
            </div>
            <input 
              type="search" 
              placeholder="Vyhledej produkt..." 
              class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-gray-50 placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
          </div>
        </div>
        
        <!-- Mobile Links -->
        <a href="/" class="text-gray-900 hover:bg-gray-50 block px-3 py-2 text-base font-medium rounded-md">Domů</a>
        <a href="/products" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 block px-3 py-2 text-base font-medium rounded-md">Produkt</a>
        <a href="/categories" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 block px-3 py-2 text-base font-medium rounded-md">Kategorie</a>
        <a href="/deals" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 block px-3 py-2 text-base font-medium rounded-md">Slevy</a>
        <a href="/about" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 block px-3 py-2 text-base font-medium rounded-md">O Nás</a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById("menu-button")
  const mobileMenuOpen = document.getElementById("menu-open");
  const mobileMenuClose = document.getElementById("menu-close");
  const mobileMenu = document.getElementById("mobile-menu");

  if(mobileMenu && mobileMenuOpen && mobileMenuClose && mobileMenuButton) {
    mobileMenuButton.addEventListener("click", () => {
      const isMenuClosed = mobileMenuClose.classList.contains("hidden");

      if(isMenuClosed){
        mobileMenuOpen.classList.add("hidden");
        mobileMenuClose.classList.remove("hidden");
        mobileMenu.style.display = "block";
      } else {
        mobileMenuClose.classList.add("hidden");
        mobileMenuOpen.classList.remove("hidden");
        mobileMenu.style.display = "none";
      }
    });
  }
</script>